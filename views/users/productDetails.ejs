    <script>
        function addToWishlist(productId, userId) {
            if (!userId) {
                Swal.fire(
                    'Login',
                    'User need to Login for further proceeding',
                    'warning'
                ).then(() => {

                    window.location.href = "/login"
                })

            }

            $.ajax({
                url: `/add-to-wishlist?productId=${productId}`,
                method: 'get',
                success: function (res) {
                    if (res.success1) {
                        Swal.fire(
                            'Done!',
                            'Item added to your wishlist.',
                            'success'
                        )
                        
                        .then(() => {
                            // alert(res.length)
                            if (res.length && res.length == 1) {
                                // alert('res.length')
                                window.location.reload()
                                document.getElementById('wishlistLength').innerHTML = 1;
                            } else {
                                // alert(res.length)
                                const number = document.getElementById('wishlistLength').innerHTML
                                document.getElementById('wishlistLength').innerHTML = parseInt(number) + 1;
                            }
                        })


                    } else if (res.success) {
                        Swal.fire(
                            'Alert',
                            'Item already exists in wishlist',
                            'question'
                        );
                    }
                }
            })
        }

        function addToCart(productId, userId) {
            $.ajax({
                url: `/add-to-cart?productId=${productId}`,
                method: 'get',
                success: function (res) {
                    if (res.success) {
                        Swal.fire(
                            'Done!',
                            'Item added to your wishlist.',
                            'success'
                        )
           

                    }
                    if(res.nonrepeat) {
                        const number = document.getElementById('cartLength').innerHTML
                        document.getElementById('cartLength').innerHTML = parseInt(number) + 1;
                    }
                }

            })
        }


    </script>

