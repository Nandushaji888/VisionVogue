function updateServerOnPageChange(cartData) {
    $.ajax({
        url: '/change-quantity',
        data: {
            cart: cartData
        },
        success: function (response) {
            console.log('Server updated with cart data');
        },
        error: function (error) {
            console.error('Error updating server with cart data');
        }
    });
}

