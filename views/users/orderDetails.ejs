

<%- include('../partials/home/home-header.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.27/dist/sweetalert2.all.min.js"></script>



    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="index.html" rel="nofollow">Home</a>
                    <span> account</span>
                    <span>order details</span>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row mb-50 mt-20 order-info-wrap">

                <div class="col-md-4">
                    <article class="icontext align-items-start">
                        <span class="icon icon-sm rounded-circle bg-primary-light">
                            <i class="text-primary material-icons md-place"></i>
                        </span>
                        <div class="text">
                            <h6 class="mb-1">Deliver to</h6>
                            <p class="mb-1">
                                <%=order.shippingAddress.customerName%> <br>
                                    <%=order.shippingAddress.addressLine1%> <br>
                                        <%=order.shippingAddress.city%>, <%=order.shippingAddress.state%> <br>
                                                <%=order.shippingAddress.zipcode%> <br>
                                                    <%=order.shippingAddress.phone%>, <%=order.shippingAddress.email%>
                            </p>

                        </div>
                    </article>
                </div> <!-- col// -->
            </div> <!-- row // -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th width="40%">Product</th>
                                    <th width="15%">Unit Price</th>
                                    <th width="15%">Quantity</th>
                                    <th width="15%">Payment</th>
                                    <th width="15%" class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let i=0; i < order.products.length; i++){%>
                                    <tr>
                                        <td>
                                            <a class="itemside" href="#">
                                                <div class="left">
                                                    <img src="/assets2/imgs/products/<%=order.products[i].productId.image[0]%>"
                                                        width="40" height="40" class="img-xs" alt="Item">
                                                </div>
                                                <div class="info"><a
                                                        href="/product/<%=order.products[i].productId._id%>">
                                                        <%=order.products[i].productId.name%>
                                                    </a> </div>
                                            </a>
                                        </td>
                                        <td>₹ <%=order.products[i].productId.price%>
                                        </td>
                                        <td>
                                            <%=order.products[i].quantity%>
                                        </td>
                                        <td>
                                            <%=order.paymentDetails%>
                                        </td>
                                        <td class="text-end">₹ <%=order.products[i].productId.price
                                                *order.products[i].quantity %>
                                        </td>
                                    </tr>
                                    <%}%>
                                        <tr>
                                            <td colspan="5">
                                                <article class="float-end">
                                                    <dl class="dlist d-flex">
                                                        <dt>Subtotal:</dt>
                                                        <dd>
                                                            <%=order.totalAmount%>
                                                        </dd>
                                                    </dl>
                                                    <dl class="dlist d-flex">
                                                        <dt>Shipping cost:</dt>
                                                        <dd>0</dd>
                                                    </dl>
                                                    <dl class="dlist d-flex">
                                                        <dt>Grand total:</dt>
                                                        <dd> <b class="h5">
                                                                <%=order.totalAmount%>
                                                            </b> </dd>
                                                    </dl>
                                                    <!-- <dl class="dlist d-flex">
                                                <dt class="text-muted">Status:</dt>
                                                <dd>
                                                    <span class="badge rounded-pill alert-success text-success">Payment done</span>
                                                </dd>
                                            </dl> -->
                                                </article>
                                            </td>
                                        </tr>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive// -->
                    <button class="button my-4" onclick="orderCancel('<%=order._id%>')">Cancel this Order</button>
                   
                </div> <!-- col// -->
                <div class="col-lg-1"></div>
                <div class="col-lg-4">
                   

                </div> <!-- col// -->
            </div>
        </div>
    </main>
    <!-- "/order-cancel/<%=order._id%>" -->


    <script>
        function orderCancel(orderId) {
            try {
                console.log('order id is ' + orderId);
                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you want to cancel this order!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/order-cancel/${orderId}`, {
                            method: 'get',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                        }).then((response) => {
                            if (response.ok) {
                                window.location.href = '/user-account';
                            } else {
                                console.error('Order cancellation failed');
                            }
                        });
                    }
                })
            } catch (error) {
                console.error(error);
            }
        }
    </script>
    
