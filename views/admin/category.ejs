            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/category" method="post" enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="name"
                                        name="name" required />
                                </div>
                                <div class="mb-4">
                                    <label for="product_image" class="form-label">Uplaod Image</label>
                                    <input type="file" name="image" class="form-control" required />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">isListed</label>
                                    <select class="form-select" name="isListed" required>
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="description"
                                        required>
                                </div>
                                <% if (typeof message !=='undefined' ) { %>
                                    <p style="color: rgba(38, 64, 41, 0.836);">
                                        <%= message %>
                                            <p>
                                                <% } %>
                                                    <div class="d-grid">
                                                        <button type="submit" class="btn btn-primary">Create
                                                            category</button>
                                                    </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover " id="dataTable">
                                    <thead>
                                        <tr class="text-center">

                                            <th>No</th>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                        <thead>


                                        <tbody>
                                            <% if(category.length>0){
                                                for(let i = category.length - 1; i >=0; i--){
                                                %>
                                                <tr class="text-center ">

                                                    <td class="align-middle">
                                                        <%= category.length - i %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <%= category[i].name %>
                                                    </td>
                                                    <td class="align-middle"><img
                                                            src="/assets2/imgs/category/<%=category[i].image%>"
                                                            width="75px" height="75px" alt="<%=category[i].image%>">
                                                    </td>
                                                    <td class="align-middle">
                                                        <%= category[i].isListed %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <%= category[i].description %>
                                                    </td>
                                                    <td class="align-middle"><a
                                                            class="btn btn-info btn-sm btn-block mx-2"
                                                            href="/admin/edit-category?id=<%= category[i]._id %>">edit</a>
                                                        <a class="btn btn-danger btn-sm btn-block mx-2"
                                                            href="/admin/category-status?id=<%= category[i]._id %>">
                                                            <% if(category[i].isListed){%> Disable <%}else{%>Enable<%}%>
                                                        </a>
                                                    </td>
                                                </tr>

                                                <% } }else{ %>
                                                    <tr>
                                                        <td colspan="5">Users Not Found</td>
                                                    </tr>
                                                    <% } %>

                                        </tbody>
                                </table>


                            </div>
                        </div> <!-- .col// -->
